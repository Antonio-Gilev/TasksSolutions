@model IEnumerable<ProductsListing.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1 class="text-center">Products</h1>
<hr/>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<br/>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4">
                <img src="@product.Category.Picture" class="card-img-top" alt="Category Picture">
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">Price: @product.UnitPrice</p>
                    <p class="card-text">Category: @product.Category.CategoryName</p>
                    <p class="card-text">Units in Stock: @product.UnitsInStock</p>
                    <a href="@Url.Action("Delete", new { id = product.ProductID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>

                </div>
            </div>
        </div>
    }
</div>
